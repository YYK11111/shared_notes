# 服务器配置
PORT=3000
HOST=localhost
NODE_ENV=development

# 数据库配置（MySQL 8.0+）
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_database_password
DB_NAME=note_sharing_platform
DB_CONNECTION_LIMIT=10

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d  # 7天有效期
JWT_REFRESH_EXPIRES_IN=30d

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600  # 缓存有效期（秒）

# 邮件服务配置
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@example.com
MAIL_FROM_NAME="个人笔记分享平台"

# 安全配置
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900  # 15分钟（秒）

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# 搜索配置
SEARCH_SUGGESTION_LIMIT=5
SEARCH_TITLE_WEIGHT=2
SEARCH_CONTENT_WEIGHT=1

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs

# 临时管理员模式配置（首次安装时使用）
TEMP_ADMIN_USERNAME=admin
TEMP_ADMIN_PASSWORD=admin123

# API速率限制
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX=1000  # 15分钟内最多1000个请求

# 跨域配置
CORS_ORIGIN=*

# 性能优化
COMPRESSION=true
ETAG=true

# 前端相关配置
FRONTEND_URL=http://localhost:8080